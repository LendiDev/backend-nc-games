  "GET /api/reviews": {
    "description": "serves an array of all reviews",
    "queries": ["category", "sort_by", "order", "p", "limit"],
    "queriesLimitation": [
      {
        "sort_by": [
          "owner",
          "title",
          "category",
          "created_at",
          "votes",
          "designer",
          "comment_count"
        ],
        "order": ["ASC", "DESC"]
      }
    ],
    "queriesDefaults": [
      {
        "sort_by": "created_at",
        "order": "DESC",
        "limit": "1",
        "p": "10"
      }
    ],
    "onSuccessStatusCode": 200,
    "examplePayload": {
      "reviews": [
        {
          "review_id": 8,
          "title": "Scythe; you're gonna need a bigger table!",
          "category": "engine-building",
          "designer": "Jamey Stegmaier",
